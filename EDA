import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

df = pd.read_csv("data/processed/cleaned_car_sales.csv")

# Annual avg price
df.groupby("year")["price_usd"].mean().plot(kind="line", title="Annual avg price", figsize=(8, 4))
plt.savefig("reports/figures/avg_price_by_year.png")

# Total sales by location
plt.figure(figsize=(10,6))
sns.barplot(data=df, x="region", y="sales_volume", estimator=sum)
plt.xticks(rotation=45)
plt.title("Total sales by location")
plt.savefig("reports/figures/totla_sales_by_region.png")
plt.close()
